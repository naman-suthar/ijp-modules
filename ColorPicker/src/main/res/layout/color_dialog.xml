<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light"
    style="@style/Widget.MaterialComponents.CardView"
    app:cardCornerRadius="15dp">
    <LinearLayout
        tools:viewBindingIgnore="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/dialogTabLayout"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="36dp"/>


        <com.ijp.colorpicker.StaticViewPager
            android:id="@+id/colorPager"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_height="wrap_content">
<!--
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:background="@drawable/transparentbackrepeat"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:text="@string/oldColor"
                    android:paddingRight="5dp"
                    android:paddingEnd="5dp"
                    android:id="@+id/oldButton"
                    android:textColor="@android:color/white"
                    android:layout_height="50dp" />

            </LinearLayout>-->

            <com.google.android.material.button.MaterialButton
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/oldColor"
                android:id="@+id/oldButton"
                android:backgroundTint="@color/transparent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/Widget.Material3.Button"
                android:layout_marginEnd="3dp"
                android:paddingVertical="16dp"
                android:layout_width="0dp"/>

            <com.google.android.material.button.MaterialButton
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/newColor"
                android:id="@+id/newButton"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="@color/transparent"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:paddingVertical="16dp"
                android:layout_width="0dp"/>



        </LinearLayout>



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
